/* pages/detail/detail.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.goods-detail {
  background-color: #fff;
}

.goods-image {
  width: 100%;
  height: 600rpx;
  object-fit: cover;
}

.goods-info {
  padding: 30rpx;
}

.goods-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.goods-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.goods-price {
  font-size: 40rpx;
  color: #ff4444;
  font-weight: bold;
  margin: 20rpx 0;
}

.goods-stock {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  margin-top: 30rpx;
  border: none;
}

.btn-primary {
  background-color: #ff4444;
}

.btn-disabled {
  background-color: #ccc;
}

.loading {
  text-align: center;
  padding: 100rpx;
  font-size: 32rpx;
  color: #999;
}